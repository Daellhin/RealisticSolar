package com.daellhin.realisticsolar;

import com.daellhin.realisticsolar.tile.TileDopingReactor;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.entity.player.InventoryPlayer;
import net.minecraft.inventory.Slot;
import net.minecraft.item.ItemStack;

public class ContainerDopingReactor extends ContainerRealisticSolar{
	private final TileDopingReactor te;
	
	public ContainerDopingReactor(InventoryPlayer playerInventory, TileDopingReactor te) {
		addSlotToContainer(new Slot(te, 0, 50, 50));
		addSlotToContainer(new Slot(te, 1, 65, 50));
		addSlotToContainer(new Slot(te, 2, 50, 75));
		
		this.addPlayerSlots(playerInventory, 8, 84);
		this.te = te;
	}
	
	@Override
	public boolean canInteractWith(EntityPlayer player) {
		return te.isUsableByPlayer(player);
	}
	
	@Override
	public ItemStack transferStackInSlot(EntityPlayer p_82846_1_, int p_82846_2_) {
		return null; 
	}

}
