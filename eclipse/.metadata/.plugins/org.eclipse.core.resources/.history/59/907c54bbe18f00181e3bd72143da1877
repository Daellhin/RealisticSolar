package com.daellhin.realisticsolar.blocks.machines;

import com.daellhin.realisticsolar.creativetab.RealisticSolarCreativeTab;

import net.minecraft.block.Block;
import net.minecraft.block.material.Material;

public class BlockCoalCrucible extends Block {
	public BlockCoalCrucible (Material material) {
		super(material);
		this.setBlockName("blockCoalCrucible");
		this.setBlockTextureName("rs:blockCoalCrucible");
		this.setCreativeTab(RealisticSolarCreativeTab.tabRSM);
		
		this.setHardness(2.0F);
		//this.setResistance();
		this.setHarvestLevel("pickaxe", 2 );
		this.setLightLevel(0);
		this.setLightOpacity(16);
		this.setStepSound(this.soundTypeStone);
	}

}
