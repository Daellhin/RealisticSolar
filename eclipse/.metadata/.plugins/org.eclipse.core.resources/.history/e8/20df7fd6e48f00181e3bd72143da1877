package com.daellhin.realisticsolar.items.meta;

import java.util.List;

import com.daellhin.realisticsolar.creativetab.RealisticSolarCreativeTab;
import com.daellhin.realisticsolar.items.meta.enums.EnumItemCrystallineSilicon;

import net.minecraft.client.renderer.texture.IIconRegister;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraft.util.IIcon;

public class ItemCrystallineSilicon extends Item {
	protected IIcon[] icons;
	
	public ItemCrystallineSilicon() {
		this.setUnlocalizedName("itemCrystallineSilicon");
		this.setCreativeTab(RealisticSolarCreativeTab.tabRS);
		this.setHasSubtypes(true);
		this.setMaxDamage(0);
		
	}
	
	@Override
	public String getUnlocalizedName(ItemStack stack) {
		int metadata = stack.getItemDamage();
		EnumItemCrystallineSilicon en = EnumItemCrystallineSilicon.values()[metadata];
		return "item." + en.getName();
		
	}
	
	@Override 
	public void getSubItems(Item item, CreativeTabs tab, List list) {
		for(EnumItemCrystallineSilicon en : EnumItemCrystallineSilicon.values()) {
			list.add(new ItemStack(item, 1, en.getMeta()));
		}
	}
	
	@Override
	public void registerIcons(IIconRegister reg) {
		icons = new IIcon[EnumItemCrystallineSilicon.count()];
		
		for(EnumItemCrystallineSilicon en: EnumItemCrystallineSilicon.values()) {
			icons[en.getMeta()] = reg.registerIcon("rs:Item" + en.getName());
		}
	}
	
	@Override
	public IIcon getIconFromDamage(int meta) {
		if(meta >= 0 && meta < EnumItemCrystallineSilicon.count()) {
			return icons[meta];
		}
		else {
			return null;
		}
	}
	
}
